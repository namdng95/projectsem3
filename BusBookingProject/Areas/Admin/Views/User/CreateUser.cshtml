@model BusBookingProject.Areas.Admin.Models.UserRegistor
@{
    ViewBag.Title = "Thêm người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDashBoard.cshtml";
}

@section css{
    <link href="~/Areas/Admin/Assets/css/cssAdmin.css" rel="stylesheet" />
}
<h1>Thêm mới người dùng</h1>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Nhập thông tin người dùng</h4>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("CreateUser", "User", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @if (ViewBag.Success != null)
                        {
                            <div class="alert alert-success">@ViewBag.Success</div>
                        }
                        else if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger">@ViewBag.Error</div>
                        }
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group div-margin">
                                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-4 col-sm-4 col-xs-4" })
                                    <div class="col-md-6 col-sm-6 col-xs-6">
                                        @Html.TextBoxFor(model => model.Username, htmlAttributes: new { @class = "form-control inputAd" })
                                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group div-margin">
                                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-4 col-sm-4 col-xs-4" })
                                    <div class="col-md-6 col-sm-6 col-xs-6">
                                        @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control inputAd" })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group div-margin">
                                    @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-4 col-sm-4 col-xs-4" })
                                    <div class="col-md-6 col-sm-6 col-xs-6">
                                        @Html.PasswordFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "form-control inputAd" })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group div-margin">
                                    @Html.LabelFor(model => model.Role, htmlAttributes: new { @class = "control-label col-md-4 col-sm-4 col-xs-4" })
                                    <div class="col-md-6 col-sm-6 col-xs-6">
                                        @Html.DropDownListFor(model => model.Role, new SelectList(new[] { new SelectListItem { Text = "Admin", Value = "Admin" }, new SelectListItem { Text = "Manager", Value = "Manager" }, new SelectListItem { Text = "User", Value = "User" } }, "Text", "Value"), "Select Role", htmlAttributes: new { @class = "form-control inputAd" })
                                        @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group div-margin">
                                    @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-4 col-sm-4 col-xs-4" })
                                    <div class="col-md-6 col-sm-6 col-xs-6">
                                        @Html.DropDownListFor(model => model.Status, new SelectList(new[] { new SelectListItem { Text = "True", Value = "Actived" }, new SelectListItem { Text = "False", Value = "Not Actived" } }, "Text", "Value"), "Select Status", htmlAttributes: new { @class = "form-control inputAd" })
                                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="form-group btnMargin">
                            <input class="btnAd" type="submit" value="Thêm" />
                        </div>

                        <div class="form-group">
                            <span style="font-size: 20px; text-align:center;">@Html.ActionLink("Back to List", "Index", "User")</span>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>


